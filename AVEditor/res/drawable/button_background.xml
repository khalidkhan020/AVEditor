<?xml version="1.0" encoding="utf-8"?>

    <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="90" 
                android:startColor="#898585"
                android:centerColor="#898585"
                android:endColor="#898585" />
        </shape>
    </item>
    <item android:top="1dp" android:left="0dp" 
        android:right="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
             <gradient android:angle="90" 
                android:startColor="#cccccb"
                android:endColor="#cccccb"
               />
        </shape>
    </item>
</layer-list>
